<div id="carbon-calculator">
  <h2>Carbon Footprint Calculator</h2>
  <form id="calculator-form">
    <label for="transport">Transport (km per week):</label>
    <input type="number" id="transport" name="transport" min="0" required>

    <label for="electricity">Electricity (kWh per month):</label>
    <input type="number" id="electricity" name="electricity" min="0" required>

    <label for="meat-consumption">Meat Consumption (meals per week):</label>
    <input type="number" id="meat-consumption" name="meat-consumption" min="0" required>

    <button type="button" onclick="calculateFootprint()">Calculate</button>
  </form>

  <div id="result"></div>
</div>
<script>
  function calculateFootprint() {
    var transport = document.getElementById('transport').value;
    var electricity = document.getElementById('electricity').value;
    var meatConsumption = document.getElementById('meat-consumption').value;

    // Example calculation (simplified)
    var footprint = (transport * 0.21) + (electricity * 0.5) + (meatConsumption * 3);

    document.getElementById('result').innerText = 'Your estimated carbon footprint is ' + footprint.toFixed(2) + ' tons of CO2 per year.';
  }
</script>
